<% error = @area_distance.errors.include?(:area_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :出发区域, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :area_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
  </div>
</fieldset>
<% error = @area_distance.errors.include?(:fee) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :费用, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :fee, :class => 'form-control input-xlarge input-with-feedback' %>
    
  </div>
</fieldset>
<% error = @area_distance.errors.include?(:toarea) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :到底区域, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :toarea, :class => 'form-control input-xlarge input-with-feedback' %>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:area_distances, :index), :class => 'btn btn-default' %>
</div>