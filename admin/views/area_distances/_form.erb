<% error = @area_distance.errors.include?(:area_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :area_id, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :area_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
