<% error = @content_pic.errors.include?(:content_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :content_id, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :content_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:content_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<% error = @content_pic.errors.include?(:url) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :url, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :url, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:url) : "Ex: a simple text" %></span>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:content_pics, :index), :class => 'btn btn-default' %>
</div>