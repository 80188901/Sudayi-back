<% error = @lang_cate.errors.include?(:name) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :分类名, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :name, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
  </div>
</fieldset>
<% error = @lang_cate.errors.include?(:short) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :简写, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :short, :class => 'form-control input-xlarge input-with-feedback' %>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:lang_cates, :index), :class => 'btn btn-default' %>
</div>