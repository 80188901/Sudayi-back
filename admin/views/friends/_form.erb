<% error = @friend.errors.include?(:account_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :用户名, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :account_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    
  </div>
</fieldset>
<% error = @friend.errors.include?(:firend) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :他（她）的朋友, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :firend, :class => 'form-control input-xlarge input-with-feedback' %>
    
  </div>
</fieldset>
<% error = @friend.errors.include?(:bind) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :对方是否答应为朋友, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :bind, :class => 'form-control input-xlarge input-with-feedback' %>
    
  </div>
</fieldset>
<% error = @friend.errors.include?(:block) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :屏蔽此朋友, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :block, :class => 'form-control input-xlarge input-with-feedback' %>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:friends, :index), :class => 'btn btn-default' %>
</div>