<% error = @coment.errors.include?(:post_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :分享号, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :post_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:post_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>
