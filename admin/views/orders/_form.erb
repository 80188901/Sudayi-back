<% error = @order.errors.include?(:cart_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :购物车号, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :cart_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
  </div>
</fieldset>
<% error = @order.errors.include?(:account_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :购买者号, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :account_id, :class => 'form-control input-xlarge input-with-feedback' %>
  </div>
</fieldset>
<% error = @order.errors.include?(:address_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :地址, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :address_id, :class => 'form-control input-xlarge input-with-feedback' %>
   
  </div>
</fieldset>
<% error = @order.errors.include?(:price) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :总价, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :price, :class => 'form-control input-xlarge input-with-feedback' %>
   
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:orders, :index), :class => 'btn btn-default' %>
</div>