<h2>填写商品信息</h2>
<%= image_tag @image_item.url.thumb if @image_item.url? %>
  <% form_for :product, url(:products, :create), :class => 'form-horizontal' do |f| %>
    <% error = @product.errors.include?(:website_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
	
  <%= f.label :所属网站, :class => 'control-label' , :value => @host%>
  <div class='controls'><p><%= @website.name %></p>
    <%= f.hidden_field :website_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true , :value => @website.id%>
    
  </div>
</fieldset>
<% error = @product.errors.include?(:payment_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :默认付款方式, :class => 'control-label' %>
  <div class='controls'>
    <%= f.select(:payment_id, :collection => Payment.all, :fields => [:name, :id], :class => 'form-control input-xlarge input-with-feedback', :autofocus => true) %>
  </div>
</fieldset>
<% error = @product.errors.include?(:store_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :所属仓库, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :store_id, :class => 'form-control input-xlarge input-with-feedback' %>
  </div>
</fieldset>
