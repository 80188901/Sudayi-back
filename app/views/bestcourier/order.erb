<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		 <%=stylesheet_link_tag "bestcourier/order"%>
		  <%=stylesheet_link_tag "bestcourier/base"%>
		<title></title>
	</head>
	<body>
		<div class="table">
			<ul>
				<li><h3>按配送员查看</h3></li>
				<li>
					<h3>按订单查看</h3>
					<a href="add_order"><button class="button">添加新订单</button></a>
				</li>
				<br class="clear" />
			</ul>
			<dl>
				<dd>
					<table border="0" cellspacing="0" cellpadding="0" width="100%">
						<tr>
							<th>工号</th>
							<th>姓名</th>
							<th>状态</th>
						</tr>
						<%@couriers.each do |courier|%>
						<tr>
							<td><%=courier.number%></td>
							<td><%=courier.name%></td>
							<%if courier.isfree%>
							<td>无订单待命中（<%=courier.account.node.name%>）</td>
							<%else%>
							<td><a href="order_flow?courier_id=<%=courier._id%>">已接到<%=courier.orders.max(:level).to_i%>张订单预计<%=courier.whenfree.strftime('%Y-%m-%d %H:%M:%S')%>结束</a></td>
							<%end%>
						</tr>
						<%end%>
						
					</table>
				</dd>
				<dd>
					<table border="0" cellspacing="0" cellpadding="0" width="100%">
						<tr>
							<th>序号</th>
							<th>订单</th>
							<th>配送</th>
							<th>始发区</th>
							<th>供应商区</th>
							<th>客户区</th>
							<th>最后状态（位置）</th>
						</tr>
						<%@orders.each_with_index do |order,index|%>
						<tr>
							<td><%=index+1%></td>
							<td><%=order.number%></td>
							<td><%=order.employee.name%></td>
							<td><%=Node.find(order.firstnode).name%></td>
							<td><%=order.store.node.name%></td>
							<td><%=order.node.name%></td>
							<%if  order.isnow%>
							<td><%=Order.get_now_node(order._id)[0]%></td>
							<%else%>
							<td>等待派件</td>	
							<%end%>
						</tr>
						<%end%>
					
					</table>
				</dd>
			</dl>
		</div>
	</body>
</html>