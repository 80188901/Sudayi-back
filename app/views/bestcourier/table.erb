<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	  <%=stylesheet_link_tag "bestcourier/table"%>
	  <%=stylesheet_link_tag "bestcourier/base"%>
	<title>Document</title>
</head>
<body>
	<div class="table">
		<h2>深圳</h2>
		<h2>共<%=@nodes.count%>区</h2>
		<br class="clear" />
		<table cellpadding="0" cellspacing="0" width="100%" border="1">
			<tr>
				<th>始发</th>
				<th>城市</th>
				<th>区号</th>
				<th>行政区</th>
				<th>常用名</th>
				<th>街道1</th>
				<th>街道2</th>
				<th>街道3</th>
				<th>街道4</th>
				<th>街道5</th>
				<th>地图</th>
				<th>推荐路线</th>
				<th>操作</th>
			</tr>
			<%@nodes.each do |node|%>
			<tr>
				<td><input type="checkbox" name="" id="" /></td>
				<td><%=node.city.name%></td>
				<td><%=node.number%></td>
				<td><%=node.area.name%></td>
				<td><%=node.name%></td>
				<%node.streets.each do |street|%>
				<td><%=street%></td>
				<%end%>
				<%if node.streets.size<5%>
				 <%(5-node.streets.size).times do%>
					<td>/</td>
				 <%end%>
				<%end%>
				<td><img src="<%=image_path 'bestcourier/u83.png'%>" width="20" height="20"/></td>
				<td><img src="<%=image_path 'bestcourier/u99.png'%>" width="20" height="20"/></td>
				<td><a href="delete_node?node__id=<%=node._id%>"><img src="<%=image_path 'bestcourier/u95.png'%>" width="20" height="20"/></a></td>
			</tr>
			<%end%>
		</table>
		<button class="button">添加新区域</button>
	</div>
</body>
</html>